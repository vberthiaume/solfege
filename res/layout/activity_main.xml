<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    style="@dimen/activity_vertical_margin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:gravity="top|center_vertical|right"
    android:orientation="vertical"
    android:overScrollMode="always"
    android:padding="10dp" >

    <WebView
        android:id="@+id/partitionHtml"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight=".5"
        android:overScrollMode="always" />

    <com.solfege.solfege.PitchView
        android:id="@+id/pitch_view"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight=".5">
    </com.solfege.solfege.PitchView>

    <Button
        android:id="@+id/mainButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onMainButtonClick"
        android:text="@string/mainButton" />

