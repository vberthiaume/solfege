<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    style="@dimen/activity_vertical_margin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:gravity="top|center_vertical|right"
    android:orientation="vertical"
    android:overScrollMode="always"
    android:padding="10dp" >

    <Button
        android:id="@+id/singButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onSingButtonClick"
        android:text="@string/singActivityButton" />

    <Button
        android:id="@+id/harmonyButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onHarmonyButtonClick"
        android:text="@string/hearActivityButton" />

</LinearLayout>